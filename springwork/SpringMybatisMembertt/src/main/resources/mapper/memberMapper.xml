<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member.dao.MemberDao">
    <select id="memberTotalCount" resultType="int">
        select count(*) from memberdb
    </select>
    <select id="selectIdCheck" parameterType="String" resultType="int">
        select count(*)
        from memberdb
        where myid = #{searchid}
    </select>
    <select id="insertMember" parameterType="MemberDto">
        insert into memberdb (name, myid, passwd, addr, hp, email, photo, birthday, gaipday)
        values (#{name}, #{myid}, #{passwd}, #{addr}, #{hp}, #{email}, #{photo}, #{birthday}, now())
    </select>
    <select id="selectAllMembers" resultType="MemberDto">
        select * from memberdb order by num
    </select>
    <select id="deleteMember" parameterType="MemberDto">
        delete from memberdb where myid=#{myid}
    </select>
    <select id="detailMember" parameterType="String">
        select * from memberdb where myid=#{myid}
    </select>
</mapper>